<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fav_item_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/fav_imageView"
        android:layout_width="88dp"
        android:layout_height="83dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/miscellaneous_icon" />

    <ImageView
        android:id="@+id/fav_heart"
        android:layout_width="64dp"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fav_event"
        android:layout_width="214dp"
        android:layout_height="21dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/fav_heart"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/fav_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fav_venue"
        android:layout_width="214dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/fav_heart"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toEndOf="@+id/fav_imageView"
        app:layout_constraintTop_toBottomOf="@+id/fav_event" />

    <TextView
        android:id="@+id/fav_date"
        android:layout_width="214dp"
        android:layout_height="21dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fav_heart"
        app:layout_constraintStart_toEndOf="@+id/fav_imageView"
        app:layout_constraintTop_toBottomOf="@+id/fav_venue" />
</androidx.constraintlayout.widget.ConstraintLayout>